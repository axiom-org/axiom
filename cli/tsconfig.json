  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "noImplicitAny": true,
    "types": [
      "node",
      "jest",
    ]
  },
  "include": [
    "src/**/*"
  ]
}
