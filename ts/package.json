{
  "name": "axiom-api",
  "version": "0.0.42",
  "description": "API for interacting with the Axiom.org cryptocurrency platform",
  "repository": {
    "type": "git",
    "url": "https://github.com/axiom-org/axiom.git"
  },
  "license": "MIT",
  "author": "Kevin Lacker",
  "bin": {},
  "main": "build/browser/browser/AxiomAPI.js",
  "scripts": {
    "app": "parcel app/index.html",
    "integration": "TS_NODE_PROJECT=tsconfig.node.json node -r ts-node/register src/node/integration-main.ts",
    "build-api": "tsc -d --project tsconfig.browser.json",
    "build-cli": "tsc --project tsconfig.node.json",
    "cli": "ts-node --project tsconfig.node.json src/node/cli-main.ts",
    "ext-alpha": "NETWORK=alpha ./build-extension.sh",
    "ext-local": "NETWORK=local ./build-extension.sh",
    "hserver": "TS_NODE_PROJECT=tsconfig.node.json node -r ts-node/register src/node/hserver-main.ts --keypair=./mint.json --capacity=1000",
    "peerserver": "TS_NODE_PROJECT=tsconfig.node.json node -r ts-node/register src/node/peerserver-main.ts",
    "prepublish": "npm run build-api",
    "repackage": "ts-node src/node/repackage-main.ts",
    "test-browser": "jest --config jest.config.browser.js",
    "test-node": "jest --config jest.config.node.js --maxWorkers=4",
    "zip": "NODE_ENV=production NETWORK=alpha ./build-extension.sh"
  },
  "browserslist": [
    "last 10 chrome versions"
  ],
  "dependencies": {
    "@material-ui/core": "^3.9.3",
    "args": "^5.0.1",
    "axios": ">=0.19.0",
    "base64-js": "^1.3.1",
    "checksum": "^0.1.1",
    "diskusage": "^1.1.3",
    "isomorphic-ws": "^4.0.1",
    "json-stable-stringify": "^1.0.1",
    "node-forge": "^0.7.6",
    "parcel-bundler": "^1.12.3",
    "pouchdb": "^7.1.1",
    "pouchdb-find": "^7.1.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-redux": "^5.1.1",
    "redux": "^4.0.4",
    "rimraf": "^2.7.1",
    "segfault-handler": "^1.3.0",
    "simple-peer": "^9.6.0",
    "text-encoding-shim": "^1.0.4",
    "tweetnacl": "^1.0.1",
    "typeface-roboto": "0.0.54",
    "webtorrent-hybrid": "^4.0.1",
    "wrtc": "^0.4.2",
    "ws": "^7.1.2",
    "yargs": "^13.3.0"
  },
  "devDependencies": {
    "@types/chrome": "0.0.82",
    "@types/jest": "^24.0.18",
    "@types/node": "^11.13.20",
    "jest": "^24.9.0",
    "pouchdb-adapter-memory": "^7.1.1",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3"
  },
  "types": "build/browser/browser/AxiomAPI.d.ts"
}
